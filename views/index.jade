doctype html
html(ng-app="SpendApp")
  head
    meta(charset="utf8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    base(href="/")
    title Gee Family Finance :: {{$state.current.data.title}}
    //JQuery
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js")

    //JQuery UI
    script(src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js")
    link(href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/ui-lightness/jquery-ui.css", rel="stylesheet")

    //AngularJS
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular-resource.min.js")
    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular-route.min.js")

    //AngularUI
    script(src="//cdnjs.cloudflare.com/ajax/libs/angular-ui/0.4.0/angular-ui.min.js")
    //script(src="/js/contrib/angular-ui-states.min.js")

    //Bootstrap
    script(src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.10.0/ui-bootstrap-tpls.min.js")
    //script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")
    link(href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css", rel="stylesheet")
    script(src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.3.5/bootstrap-select.min.js")
    link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.3.5/bootstrap-select.min.css")

    //Miscellaneous
    script(src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.5.1/moment.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/accounting.js/0.3.2/accounting.min.js")

    //NG Grid
    script(src="//cdnjs.cloudflare.com/ajax/libs/ng-grid/2.0.7/ng-grid.min.js")
    link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/ng-grid/2.0.7/ng-grid.css")

    != css("style")

    != js("app")
    != js("controllers")

  body
    nav.navbar.navbar-default(role="navigation")
      div.container-fluid
        div.navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only Toggle navigation
          a.navbar-brand(href="#/") Spend Tracker

        div.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href="#/spend") Spend
            li
              a(href="#/budget") Budget
    div(ng-view)
